<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drawers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.authentication.RegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.authentication.LoginActivity" />
        <activity android:name=".ui.KplcActivity" />
        <activity android:name=".ui.LauncherActivity"/>
        <activity android:name=".ui.EcitizenActivity" />
        <activity android:name=".ui.PortalActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>